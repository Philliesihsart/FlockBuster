@page "{FilmID:int}"
@model FlockBuster.Pages.EditMoviesModel
@{
}
<link rel="stylesheet" href="~/css/StyleSheet1.css" />
@if (Model.errormessage.Length > 0)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errormessage</strong>
        <button type="button" class="btn-close" data-bs-dissmiss="alert" aria-label="Close"></button>
    </div>
}
<form method="post">
    <h2>Rediger Film</h2>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Antal film</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Model.filmAntal" asp-for="filmAntal"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Film navn</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Model.filmNavn" asp-for="filmNavn" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Alderbegrænsning på film</label>
        <div class="col-sm-6">
            <input type="number" class="form-control" value="@Model.alderbeg" asp-for="alderbeg"/>
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">film beskrivelse</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" value="@Model.filmDesc" asp-for="filmDesc"/>
        </div>
    </div>
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Rediger</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/" role="button">Afbryd</a>
        </div>
    </div>
    @if (Model.successmessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successmessage</strong>
                    <button type="button" class="btn-close" data-bs-dissmiss="alert" aria-label="Luk"></button>
                </div>
            </div>
        </div>
    }

</form>
