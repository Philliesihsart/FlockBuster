<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlockBuster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FlockBuster.styles.css" asp-append-version="true" />

</head>
<body class="background">
    <nav class="navbar navbar-expand-lg bg-light bg-transparent">
        <a class="navbar-brand" href="/">
            <img src="/images/Flockbuster-logos_white.png" width="200" alt="" class="flex-shrink" id="logo-nav">
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="navbar-brand" style="color: white;">
                    <a class="navbar-brand" href="/Movies">Film</a>
                </li>
                <li class="navbar-brand" style="color: white;">
                    <a class="navbar-brand" href="/Kundeservice">Kundeservice</a>
                </li>
            </ul>
            <a href="/NewUser" class="btn btn-primary nav-register Button Button__round Button__blue tw-my-auto tw-ml-4 tw-py-[9px] tw-min-w-[116px] tw-text-base tw-leading-none">Opret profil</a>
        </div>
        @if (string.IsNullOrEmpty(Context.Session.GetString("Email"))) {
                <a id="a-item" class="navbar-brand text-light" href="/Login">Log ind</a>
        }
        else {
            <a id="logudBtn" class="navbar-brand text-light" href="/Logud">Log ud</a>
        }
        

    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main> 
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
